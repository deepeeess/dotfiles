#~/.mccabberrc

set jid = dansully@im.uchicago.edu
set server = im.uchicago.edu

#removed the underscore from this to not display offline buddies
#use /roster to change this at runtime
set roster_display_filter = ofdna

#this drives me crazy
alias exit = quit
alias q = quit

set color_roster = white
set color_bgstatus = black
set color_status = black

#obvious
alias quit = exit
alias q = exit

#enable otr (this will automatically generate a key if one doesn't already exist)
set otr = 1

#magically start otr conversations
otrpolicy default opportunistic
