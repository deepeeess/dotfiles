alias ra="source ~/.bashrc"
alias reflector="reflector -l 5 --sort rate --save /etc/pacman.d/mirrorlist"
alias resetxp="vboxmanage controlvm {e89cb637-d666-427b-826f-8f05d35076b3} reset"
alias sc="declare -F; alias"
alias shortcuts="declare -F; alias"
alias showrunning="vboxmanage list runningvms"
alias showvminfo="vboxmanage metrics list"
alias shutdown="echo Shut down your VMs first, or full qualify the path to this command."
