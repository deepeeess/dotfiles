if [[ `uname -a`  =~ ARCH ]]; then
    #libreoffice writer
    alias word="lowriter $1 &"
    #libreoffice calc
    alias excel="localc $1 & "
    alias calc="localc $1 & "
    #copy whatever was selected into the actual clipboard
    alias clipboard="xclip -out | xclip -selection clipboard"
    alias rdesktop="rdesktop -K -r disk:root=/ -g 1920x1200 $1" 
    alias console="rdesktop -0 -K -r disk:root=/ -g 1920x1200 $1"
    alias whatprovides="pkgfile $1"

fi
